<html>

<head>
    <%- include('../includes/head.ejs') %>
</head>

<body>
    <div class="container border border-dark rounded"
        style="margin-top:100px; margin-bottom: 160px; padding: 40px; width: 450px;">
        <!-- Page Heading/Breadcrumbs -->
        <div class="panel panel-headline" style="margin-top: 1%;">
            <div class="panel-body">
                <div class="panel-body no-padding">
                    <h2>회원 찾기</h2>

                    <p><%=msg%></p>
                    <form method="post" action="/user/pw">
                        <div class="form-group">
                            <label for="name">이름:</label>
                            <input type="text" class="form-control" id="name" name="name">
                        </div>
                        <div class="form-group" align="left">
                            <label for="email">이메일</label><br>
                            <div id="email" class="custom-control-inline">
                                <input type="text" class="form-control" id="emailid" name="emailid" placeholder=""
                                    size="25"> @
                                <select class="form-control" id="emaildomain" name="emaildomain">
                                    <option value="naver.com">naver.com</option>
                                    <option value="google.com">google.com</option>
                                    <option value="daum.net">daum.net</option>
                                    <option value="nate.com">nate.com</option>
                                    <option value="hanmail.net">hanmail.net</option>
                                </select>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">찾기</button>
                        <button type="button" class="btn btn-outline-dark"
                            onclick="location.href = '/user/login';">취소</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>

</html>